@*@model IEnumerable<IdentitySample.Models.ApplicationUser>*@
@model IdentitySample.Models.IndexUserViewModel
    @{ ViewBag.Title = "Index"; }
    <h2>Index</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
       
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.user.First().UserName)
            </th>
            @*Add a table header for the nickname info:*@
            <th>
                @Html.DisplayNameFor(model => Model.user.First().nickname)
            </th>
            <th>
                Role
            </th>
        </tr>
        @{var i = 0;}
        @foreach (var item in Model.user)
        {
            
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @*Add table data for the nickname info:*@
                    @Html.DisplayFor(modelItem => item.nickname)
                </td>
               
                    <td>
                        @foreach (var role in Model.RoleList.ElementAt(i)) { 
                        @role
                        }
                        
                    </td>
                
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
            i += 1;
        }
    </table>
